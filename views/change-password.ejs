<% include template/header %>
    <!--    Breadcrumb-->
    <div class="container">
        <ul class="breadcrumb">
            <li>
                <a href="/">Home</a>
            </li>
            <li class="lastcrumb">
                Change Password
            </li>
        </ul>
    </div>
    <!--    Breadcrumb-->
    <div class="container change-pwd" ng-app="myapp" ng-controller="change_password">
        <h4>Change Password</h4>
        <div class="panel1 panel-default">
            <div class="panel-body">
                <form style="margin-top: 20px" name="change_password" id="change_password">
                    <div class="form-group marg-btm">
                        <input type="password" id="current_password" name="current_password" class="form-control form-control1">
                        <label class="form-control-placeholder" for="name">Current Password
                            <sup>*</sup>
                        </label>
                    </div>
                    <div class="form-group marg-btm">
                        <input type="password" id="new_password" name="new_password" class="form-control form-control1">
                        <label class="form-control-placeholder" for="name">New Password
                            <sup>*</sup>
                        </label>
                    </div>
                    <div class="form-group marg-btm">
                        <input type="password" id="cnew_password" name="cnew_password" class="form-control form-control1">
                        <label class="form-control-placeholder" for="name">confirm New Password
                            <sup>*</sup>
                        </label>
                    </div>
                    <div class="form-group btn-bottom text-right visible-lg visible-md hidden-sm hidden-xs">
                        <button class="btn-pwd" type="submit" style="width:200px;margin-right: 10px;">Update password</button>
                        <button class="btn-cnl" type="reset" style="width:200px">Cancel</button>
                    </div>

                    <div class="form-group btn-bottom visible-xs visible-sm hidden-lg hidden-md">
                        <button class="btn-pwd" type="submit">Update password</button>
                        <button class="btn-cnl" type="reset">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include template/footer %>