<script>
//   otp function
$(document).ready(function () {
   $('.otpvalue').keyup(function(e){
    var key = event.which;
        if ((key == 8 || key == 46) && $(this).text() =='') {
            $(this).parent("div").prev(".form-group").find("input").focus();
        } else if ((key == 8 || key == 46)) {
            $(this).val("");
            $(this).parent("div").prev(".form-group").find("input").focus();
            event.preventDefault();
        } else {
             $(this).parent("div").next(".form-group").find("input").focus();
        }
    });
});

    $(".vcartLogout").on("click", function () {
        $.removeCookie('vcartAuth', { path: '/' });

