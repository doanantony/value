            $(function () {
                $(document).on("click", ".reviewlink", function () {
                    $(".more_review").each(function () {
                        $(this).removeClass("hidden");
                    });
                });
            });
        </script>
        <script>
            app.constant("myrev", {
                'data': "<%= JSON.stringify(myrew) %> "
            });
        </script>